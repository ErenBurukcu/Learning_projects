<mvc:View controllerName="todo.project.controller.TabloPage"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:table="sap.ui.table"
    xmlns:layout="sap.ui.layout">

    <Page
        id="HomePage"
        title="Home">
    
    <f:DynamicPage id="dynamicPageId" toggleHeaderOnTitleClick="false">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Products "/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
    
        <f:content>
            <VBox fitContainer="true">
                <OverflowToolbar class="sapFDynamicPageAlignContent">
                    <ToolbarSpacer/>
                    <SearchField search=".onSearch" width="17.5rem"/>
                    <OverflowToolbarButton  text="request" type="Transparent" press=".onRequestButtonPress"/>
                    <OverflowToolbarButton icon="sap-icon://add" text="Add" type="Transparent" press=".onAdd"/>
                    <OverflowToolbarButton icon="sap-icon://sort" text="Sort" type="Transparent" press=".onSort"/>
                </OverflowToolbar>
                <Table
                    id="employeeTable"
                    inset="false"
                    itemPress="onListItemPress"
                    items="{/veriler}"
                    class="sapFDynamicPageAlignContent"
					width="auto">
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Employee List"/>
                            <ToolbarSpacer/>
                            <Button text="Log" press="onLogPress"/>
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="ID"/>
                        </Column>
                        <Column>
                            <Text text="İsim"/>
                        </Column>
                        <Column>
                            <Text text="Departman"/>
                        </Column>
                        <Column>
                            <Text text="Başlama Tarihi"/>
                        </Column>
                        <Column>
                            <Text text="Bitiş Tarihi (Tahmini)"/>
                        </Column>
                        <Column>
                            <Text text="Müşteri yorumu"/>
                        </Column>
                        <Column>
                            <Text text="Personel yorumu"/>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem type="Navigation">
                            <cells>
                                 <ObjectIdentifier title="{employeeList>pernr}" text="{employeeList>pernr}"/>
                <Text text="{ename}"/>
                <Text text="{plntx}"/>
                <Text text="{begda}"/>
                <Text text="{endda}"/>
                <Text text="{employeeList>mstryr}"/>
                <Text text="{employeeList>pernryr}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <Panel id="logPanel" headerText="Log Kayıtları" visible="false">
                    <Text id="logText" text=""/>
                </Panel>
            </VBox>
        </f:content>
        <f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button type="Accept" text="Accept"/>
				<Button type="Reject" text="Reject"/>
			</OverflowToolbar>
		</f:footer>
    </f:DynamicPage>
    </Page>
</mvc:View>
